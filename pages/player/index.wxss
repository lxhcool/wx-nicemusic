.nav-title {
  position: relative;
  width: 100%;
}

.nav-title .name {
  font-size: 34rpx;
}

.nav-title .author {
  position: absolute;
  font-size: 28rpx;
  left: 50%;
  top: 55rpx;
  transform: translateX(-50%);
}

.normal-player {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 150;
  background: #141e30;
}

.background {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.6;
  -webkit-filter: blur(15px);
  filter: blur(15px);
}

.background image {
	width: 100%;
	height: 100%;
}

.middle .author {
  color: #fff;
}

.middle .cd-wrapper {
	width: 540rpx;
	height: 540rpx;
	border-radius: 50%;
	box-shadow: 0rpx 0rpx 100rpx 0rpx rgba(0, 0, 0, 0.03);
}

.middle .cd-wrapper .cd-img {
	width: 440rpx;
	height: 440rpx;
	border-radius: 50%;
  box-shadow: 0rpx 0rpx 200rpx 0rpx rgba(0, 0, 0, 0.5);
}

.bottom {
  width: 80%;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.8);
}