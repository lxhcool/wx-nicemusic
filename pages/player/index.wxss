page {
	background: #ffffff !important;
}

.nav-title {
  position: relative;
  width: 100%;
}

.nav-title .name {
  font-size: 34rpx;
}

.nav-title .author {
  position: absolute;
  font-size: 28rpx;
  left: 50%;
  top: 55rpx;
  transform: translateX(-50%);
}

.normal-player {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 150;
  background: rgba(21,21,27, 0.8);
}

.background {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.6;
  -webkit-filter: blur(15px);
  filter: blur(15px);
}

.background image {
  width: 100%;
  height: 100%;
}

.middle {
	height: 75%;
}

.middle .cd-wrapper {
  width: 540rpx;
  height: 540rpx;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 100rpx 0rpx rgba(0, 0, 0, 0.03);
}

.middle .cd-wrapper .cd-img {
  width: 440rpx;
  height: 440rpx;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 200rpx 0rpx rgba(0, 0, 0, 0.5);
}

.middle .lyric-line {
	font-size: 28rpx;
	color: #fff;
	line-height: 1.868;
}

.middle .lyric-scroll {
	width: 100%;
	height: 50%;
	text-align: center;
	position: absolute;
	top: 50%;
	transform: translateY(-60%);
}

.bottom {
	width: 100%;
	height: 25%;
	padding: 0 20rpx;
}

.bottom .progress {
  width: 100%;
  margin: 0px auto;
}

.bottom .progress .progress-bar-wrap {
	width: 100%;
  flex: 1;
  margin: 0 25rpx;
}

.bottom .progress .progress-bar-wrap .time {
  color: #fff;
  font-size: 26rpx;
	margin-bottom: 25rpx;
}

.bottom .operators {
	width: 100%;
	padding: 0 20rpx;
	margin-top: 80rpx;
}

.bottom .operators .center {
	width: 130rpx;
	height: 130rpx;
	background: #15151b;
	border-radius: 50%;
	box-shadow: 0rpx 0rpx 100rpx 0rpx rgba(0, 0, 0, 0.1);
}

.bottom .operators .center .niceicon {
	font-size: 40rpx;
	color: #fff;
}

.bottom .operators .center .niceicon.nicebofang3 {
	font-size: 34rpx;
}

.bottom .operators .left .niceicon,
.bottom .operators .right .niceicon {
	font-size: 50rpx;
	color: #fff;
}

.bottom .operators .list-icon .niceicon {
	color: #fff;
	font-size: 45rpx;
}

.bottom .operators .mode-icon .niceicon {
	color: #fff;
	font-size: 50rpx;
}