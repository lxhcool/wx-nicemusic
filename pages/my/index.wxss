page  {
	background: #141e30;
}

.my-wrap {
	width: 100%;
	height: 100%;
}

.bg {
	width: 100%;
	height: 100%;
	position: absolute;
}

.bg::after {
	content: '';
	width: 100%;
	height: 100%;
	background: rgba(20,30,48, 0.8);
	position: absolute;
	top: 0;
	left: 0;
	z-index: 200;
}

.bg .img {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 100;
	filter: blur(15px);
}

.content {
	position: relative;
	z-index: 300;
	padding: 0 30rpx;
}

.user {
	width: 100%;
	padding-top: 248rpx;
	display: flex;
	align-items: center;
}

.user .avatar {
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	margin-right: 30rpx;
}

.user .nickname {
	font-size: 32rpx;
	color: #fff;
	margin-bottom: 10rpx;
}

.user .profile {
	font-size: 26rpx;
	color: #fff;
}