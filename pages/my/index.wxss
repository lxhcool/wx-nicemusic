.top {
	width: 100%;
	height: 530rpx;
	position: relative;
}

.top::after {
  content: '';
  width: 0;
  height: 0;
  border-bottom: 120rpx solid #ffffff;
  border-left: 750rpx solid transparent;
  position: absolute;
  bottom: 0;
  right: 0;
}

.top .bg {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}

.top .user {
	width: 100%;
	height: 100%;
	position: relative;
  justify-content: flex-end;
  z-index: 100;
}

.top .user .avatar {
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	margin-top: 100rpx;
}

.username {
  font-size: 32rpx;
  margin-top: 12rpx;
}

.follow-wrap .item {
  width: 33.333333%;
  display: flex;
  align-items: center;
  justify-content: center;
}