.login-wrap {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 150;
  background: rgba(21,21,27, 0.8);
}

.background {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.6;
  -webkit-filter: blur(5px);
  filter: blur(5px);
}

.background image {
  width: 100%;
  height: 100%;
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.title {
  font-size: 32rpx;
  color: #ffffff;
  margin-top: 10rpx;
  font-weight: bold;
}

.form {
  width: 100%;
  padding: 0 60rpx;
  margin-top: 400rpx;
  margin-bottom: 30rpx;
}

.form .item {
  width: 100%;
  height: 85rpx;
  border-bottom: 1rpx solid rgba(255,255,255, 0.2);
  margin-bottom: 40rpx;
  padding: 0 0rpx;
}

.form .item .niceicon {
  font-size: 32rpx;
  color: #ffffff;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.form .item .text {
  width: 100%;
  height: 100%;
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
}

.placeholder-class {
  font-size: 28rpx;
  color: #ffffff;
}

.foot {
  padding: 0 10px;
  margin-top: 100rpx;
}

.foot .login-button {
  width: 100%;
  height: 90rpx;
  border-radius: 100rpx;
  background: rgba(255,255,255, 0.4);
  color: #ffffff;
  font-size: 30rpx;
}