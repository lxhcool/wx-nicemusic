page {
  background: #141e30;
  background: #15151b;
}

.home-wrap.isX {
	padding-bottom: 184rpx;
}

.search-wrap {
  width: 100%;
  height: 32px;
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 100rpx;
}

.search-wrap view {
  height: 100%;
  color: rgba(255, 255, 255, 0.6);
  margin: 0 8rpx;
  font-size: 26rpx;
  font-weight: 200;
}

.short-nav {
  width: 100%;
  padding: 20rpx 0 40rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.short-nav::after {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  content: '';
  box-sizing: border-box;
  height: 1px;
  border-bottom: 1px solid rgba(203, 203, 203, 0.1);
  transform: scaleY(0.1);
  transform-origin: 0 0;
}

.short-nav .container {
  display: flex;
}

.short-nav .item {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.short-nav .item .box {
  width: 85rpx;
  height: 85rpx;
  background: #ff5b73;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.short-nav .item .box .niceicon {
  color: #fff;
  font-size: 45rpx;
  font-weight: 400;
  position: relative;
}

.short-nav .item .box .song-list {
  font-size: 36rpx;
  margin-left: 5rpx;
  margin-top: 5rpx;
}

.short-nav .item .box .niceicon .day {
  position: absolute;
  font-size: 24rpx;
  top: 15rpx;
  transform: scale(0.7);
}

.short-nav .item .p {
  color: #fff;
  font-size: 24rpx;
  font-weight: 200;
}

.personalized-wrap {
  width: 100%;
}

.personalized-wrap .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 35rpx;
}

.personalized-wrap .title text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 100;
}

.personalized-wrap .title .more {
  display: block;
  padding: 7rpx 22rpx;
  border: 1px solid hsla(0, 0%, 100%, 0.6);
  border-radius: 100rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  font-weight: 200;
  transition: all 0.6s;
}

.personalized-wrap .title .more:active {
  opacity: 0.5;
}

.personalized-wrap .list {
  display: flex;
  flex-wrap: wrap;
  padding-left: 20rpx;
}

.personalized-wrap .list .item {
  width: 223rpx;
  margin-right: calc((100% - 669rpx) / 3);
  margin-bottom: 25rpx;
}

.personalized-wrap .list .item:nth-child(3n) {
  margin-right: 0;
}

.personalized-wrap .list .item .box {
  width: 100%;
}

.personalized-wrap .list .item .box image {
  width: 223rpx;
  height: 223rpx;
  border-radius: 15rpx;
}

.personalized-wrap .list .item .box .remd-text {
  width: 100%;
  padding: 10rpx 0 0 0;
  line-height: 1.4;
  font-size: 24rpx;
  color: hsla(0, 0%, 100%, 0.8);
}

.newsong-wrap {
  margin-top: 40rpx;
}

.newsong-wrap .newsong-scroll {
  display: flex;
  height: 330rpx;
}

.newsong-wrap .newsong-scroll .item {
  margin-right: calc((100% - 669rpx) / 2);
}

.newsong-wrap .newsong-scroll .item:nth-child(3n) {
  margin-right: calc((100% - 669rpx) / 2);
}

.newsong-wrap .newsong-scroll .item .box .remd-text {
  min-height: 75rpx;
  white-space: normal;
}

.newsong-wrap .list {
  padding-right: 20rpx;
}

.home-mv-wrap {
  width: 100%;
}

.home-mv-wrap .title {
  display: flex;
  padding: 0 20rpx 20rpx;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  position: relative;
}

.home-mv-wrap .title text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 1);
  font-weight: 100;
}

.home-mv-wrap .title .more {
  display: block;
  font-size: 24rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  font-weight: 200;
}

.home-mv-wrap .title .more text {
  font-size: 22rpx;
  margin-right: 10rpx;
}

.home-mv-wrap .title .more:active {
  opacity: 0.6;
}

.home-mv-wrap .list {
  width: 100%;
}

.home-mv-wrap .list .item {
  width: 100%;
  padding: 0 20rpx;
  border-bottom: 10rpx solid rgba(218, 197, 201, 0.05);
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
}

.home-mv-wrap .list .item .cover {
  width: 100%;
  height: 390rpx;
  border-radius: 15rpx 15rpx 0 0;
  position: relative;
}

.home-mv-wrap .list .item .cover .cover-image {
  border-radius: 15rpx 15rpx 0 0;
  width: 100%;
  height: 390rpx;
}

.home-mv-wrap .list .item .cover .bottom {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 15rpx;
  display: flex;
  align-items: center;
  z-index: 9;
}

.home-mv-wrap .list .item .cover .bottom text {
  color: rgba(255, 255, 255, 1);
  font-size: 24rpx;
}

.home-mv-wrap .list .item .cover .bottom .niceicon {
  font-size: 24rpx;
  margin-right: 15rpx;
}

.home-mv-wrap .list .item .text {
  width: 100%;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 0 0 15rpx 15rpx;
  padding: 20rpx 10rpx;
  margin-bottom: 25rpx;
}

.home-mv-wrap .list .item .text .name {
  color: rgba(255, 255, 255, 0.8);
  flex: 1;
  font-size: 28rpx;
}

.home-mv-wrap .list .item .text .niceicon {
  color: #ff5b73;
  font-size: 50rpx;
  margin-right: 10rpx;
}

.home-mv-wrap .list .item .comment {
  color: #ff5b73;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  overflow: hidden;
}

.home-mv-wrap .list .item .comment  .niceicon {
  margin-right: 15rpx;
}

.home-mv-wrap .list .item .comment .author-list .dot::after {
  content: '/';
  margin: 0 10rpx;
}

.home-mv-wrap .list .item .comment .author-list .dot:last-child::after {
  content: '';
}