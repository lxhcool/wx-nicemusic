page {
  background: #141e30;
}

.search-wrap {
  width: 100%;
  height: 32px;
  flex: 1;
  background: rgba(255, 255, 255, 0.35);
  border-radius: 100rpx;
}

.search-wrap view {
  height: 100%;
  color: rgba(255, 255, 255, 0.6);
  margin: 0 8rpx;
  font-size: 26rpx;
  font-weight: 200;
}

.short-nav {
  width: 100%;
  padding: 20rpx 0 40rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.short-nav::after {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  content: '';
  box-sizing: border-box;
  height: 1px;
  border-bottom: 1px solid rgba(203, 203, 203, 1);
  transform: scaleY(0.1);
  transform-origin: 0 0;
}

.short-nav .container {
  display: flex;
}

.short-nav .item {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.short-nav .item .box {
  width: 85rpx;
  height: 85rpx;
  background: #ff5b73;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.short-nav .item .box .niceicon {
  color: #fff;
  font-size: 45rpx;
  font-weight: 400;
  position: relative;
}

.short-nav .item .box .song-list {
  font-size: 36rpx;
  margin-left: 5rpx;
  margin-top: 5rpx;
}

.short-nav .item .box .niceicon .day {
  position: absolute;
  font-size: 24rpx;
  top: 15rpx;
  transform: scale(0.7);
}

.short-nav .item .p {
  color: #fff;
  font-size: 24rpx;
  font-weight: 200;
}

.personalized-wrap {
  width: 100%;
}

.personalized-wrap .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
	margin-bottom: 35rpx;
}

.personalized-wrap .title text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 100;
}

.personalized-wrap .title .more {
  display: block;
  padding: 7rpx 22rpx;
  border: 1px solid hsla(0, 0%, 100%, 0.6);
  border-radius: 100rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  font-weight: 200;
  transition: all 0.6s;
}

.personalized-wrap .title .more:active {
  opacity: 0.5;
}

.personalized-wrap .list {
	display: flex;
	flex-wrap: wrap;
	padding-left: 20rpx;
}

.personalized-wrap .list .item {
	width: 223rpx;
	margin-right: calc((100% - 669rpx) / 3);
	margin-bottom: 25rpx;
}

.personalized-wrap .list .item:nth-child(3n) {
	margin-right: 0;
}

.personalized-wrap .list .item .box {
	width: 100%;
}

.personalized-wrap .list .item .box image {
	width: 223rpx;
	height: 223rpx;
	border-radius: 15rpx;
}

.personalized-wrap .list .item .box .remd-text {
	width: 100%;
	padding: 10rpx 0 0 0;
	line-height: 1.4;
	font-size: 24rpx;
	color: hsla(0,0%,100%,.8);
}

.newsong-wrap {
	margin-top: 40rpx;
}

.newsong-wrap .newsong-scroll {
	display: flex;
  /* white-space: nowrap; */
	height: 330rpx;
}

.newsong-wrap .newsong-scroll .item {
	/* display: inline-block; */
	margin-right: 20rpx;
}

.newsong-wrap .newsong-scroll .item:nth-child(3n) {
	margin-right: 20rpx;
}

.newsong-wrap .newsong-scroll .item .box .remd-text {
	min-height: 75rpx;
	white-space: normal;
}

.newsong-wrap .list {
	padding-right: 20rpx;
}