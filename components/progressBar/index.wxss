@import "../../app.wxss";

.progress-bar {
  width: 100%;
}

.progress-bar .bar-inner {
	width: 100%;
  position: relative;
  height: 4px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 100rpx;
}

.progress-bar .bar-inner .progress {
  position: absolute;
	width: 50%;
  height: 100%;
  background: #15151b;
  border-radius: 100rpx;
}
