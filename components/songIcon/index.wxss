@keyframes line1 {
  from {
    height: 24rpx;
  }

  to {
    height: 12rpx;
  }
}

@keyframes line2 {
  from {
    height: 12rpx;
  }

  to {
    height: 35rpx;
  }
}

@keyframes line3 {
  from {
    height: 35rpx;
  }

  to {
    height: 20rpx;
  }
}

@keyframes line4 {
  from {
    height: 20rpx;
  }

  to {
    height: 30rpx;
  }
}