@import "../../app.wxss";

.footer-wrap {
  width: 100%;
  height: 130rpx;
  position: fixed;
  background: linear-gradient(to right, #73414a, rgba(20,30,48, 0.95));
  left: 0;
  bottom: 0;
  z-index: 8888;
  box-shadow: 0px 0px 1px 0px #2c3f55;
}

.footer-wrap.opa {
	background: rgba(20,30,48, 0.5);
	box-shadow: none;
}

.footer-wrap.isX {
	height: 174rpx;
	padding-bottom: 44rpx;
}

.footer-wrap .list {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.footer-wrap .list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer-wrap .list .item .niceicon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  font-weight: 200;
  color: #fff;
  line-height: 24rpx;
}

.footer-wrap .list .item .name {
  font-size: 24rpx;
  font-weight: 200;
  color: #fff;
  line-height: 24rpx;
}

.footer-wrap .list .item.active .niceicon {
  font-size: 30rpx;
  background: #ff5b73;
  color: #fff;
}

.footer-wrap .list .item.active .name {
  color: #ff5b73;
  font-weight: 500;
}

.footer-wrap .list .music-cd {
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
	margin-top: -50rpx;
}

.footer-wrap .list .music-cd image {
	width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
}
